def sum(a,b):
    return a+b
def substraction(a,b):
    return a-b
def multiplication(a,b):
    return a*b
def devide(a,b):
    if b ==0:
        return"Division by zero is not define try another one"
    else:
        return a/b

print("1.Addition")
print("2.Substraction")
print("3.Multiplication")
print("4.Devide")

print("Choose operation from 1,2,3,4")
choice=int(input("enter operation: "))
numb1=float(input("Enter the first number: "))
numb2=float(input("Enter the second number: "))
if choice =="1":
    print(sum(num1,num2))
elif choice =="2":
